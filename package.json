{
    "name": "just-server",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "server": "nodemon -r ts-node server.ts",
        "add-migration": "ts-node node_modules/typeorm/cli.js migration:generate -n",
        "migrations": "ts-node node_modules/typeorm/cli.js migration:run",
        "drop": "ts-node node_modules/typeorm/cli.js schema:drop",
        "orm": "ts-node node_modules/typeorm/cli.js",
        "tests": "mocha ./__test__/specs/**/*.spec.ts --require ts-node/register --timeout 10000",
        "pm": "pm2 install typescript",
        "prod": "npm run pm && ENVIRONMENT=TEST pm2 start server.ts --watch"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "chai": "^4.2.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mocha": "^8.2.0",
        "nodemon": "^2.0.5",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.4.1",
        "pm2": "^4.5.0",
        "reflect-metadata": "^0.1.13",
        "supertest": "^5.0.0",
        "ts-node": "^9.0.0",
        "typeorm": "^0.2.28"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.0",
        "@types/chai": "^4.2.14",
        "@types/cors": "^2.8.8",
        "@types/express": "^4.17.8",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.8",
        "@types/passport": "^1.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "@typescript-eslint/parser": "^4.4.1",
        "eslint": "^7.11.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.(js|ts|md)": [
            "eslint --cache --fix",
            "prettier --write"
        ]
    }
}